    <body>
        <div class="form-group" id="divMain">

            <h1>Formulaire de contact </h1>
            <br>
            <form class="form-vertical" role="form" method="post" action="/email">
            
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" name="nom" id="nom" class="form-control" placeholder="Nom"/>
                    </div>
                </div>
                <br/> <br/>     
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" name="prenom" id="prenom" class="form-control" placeholder="PrÃ©nom"/>
                    </div>
                </div>
                <br/> <br/>                
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="email" name="sender" id="sender" class="form-control" placeholder="Votre adresse mail"/>
                    </div>
                </div>
                    
                <br/> <br/> <br/> 
                <div class="form-group">
                    <div class="col-sm-10">
                        <input type="text" name="subject" id="subject" class="form-control" placeholder="L'objet du mail"/>
                    </div>
                </div>
                <br/> <br/>   
                <div class="form-group">
                    <div class="col-sm-10">
                        <textarea rows="11" name="message" id="message" class="form-control" placeholder="Le contenu de votre mail"></textarea>
                    </div>
                </div>
                <br/>    
                <div class="form-group">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>